<!-- Authors: Chris Taylor, Ceki Gulcu. -->

<!-- Version: 1.2 -->

<!-- A configuration element consists of optional renderer
elements,appender elements, categories and an optional root
element. -->

<!ELEMENT settings4j:configuration (connector*,settings*,root?,
                               contentResolver*, objectResolver*)>

<!ATTLIST settings4j:configuration
  xmlns:settings4j              CDATA #FIXED "http://settings4j.org/"
>

<!-- Appenders must have a name and a class. -->
<!-- Appenders may contain an error handler, a layout, optional parameters -->
<!-- and filters. They may also reference (or include) other appenders. -->
<!ELEMENT connector (param*, connectionSource?,
      contentResolver-ref*, objectResolver-ref*, connector-ref*)>
<!ATTLIST connector
  name 		CDATA 	#REQUIRED
  class 	CDATA	#REQUIRED
>

<!ELEMENT settings-ref EMPTY>
<!ATTLIST settings-ref
  ref CDATA #REQUIRED
>

<!ELEMENT connector-ref EMPTY>
<!ATTLIST connector-ref
  ref CDATA #REQUIRED
  readonly (true|false) "false"
>

<!ELEMENT contentResolver-ref EMPTY>
<!ATTLIST contentResolver-ref
  ref CDATA #REQUIRED
>

<!ELEMENT objectResolver-ref EMPTY>
<!ATTLIST objectResolver-ref
  ref CDATA #REQUIRED
>

<!ELEMENT param EMPTY>
<!ATTLIST param
  name		CDATA   #REQUIRED
  value		CDATA	#REQUIRED
>

<!-- If no level element is specified, then the configurator MUST not -->
<!-- touch the level of the named logger. -->
<!ELEMENT settings (param*,connector-ref*)>
<!ATTLIST settings
  factoryClass         CDATA   #IMPLIED
  name		CDATA	#REQUIRED
  additivity	(true|false) "true"  
>

<!ELEMENT contentResolver (param*, contentResolver-ref*)>
<!ATTLIST contentResolver
  name 		CDATA 	#REQUIRED
  class 	CDATA	#REQUIRED
>

<!ELEMENT objectResolver (param*, objectResolver-ref*)>
<!ATTLIST connector
  name 		CDATA 	#REQUIRED
  class 	CDATA	#REQUIRED
>

<!ELEMENT connectionSource (dataSource?, param*)>
<!ATTLIST connectionSource
  class        CDATA  #REQUIRED
>

<!ELEMENT dataSource (param*)>
<!ATTLIST dataSource
  class        CDATA  #REQUIRED
>


<!-- If no priority element is specified, then the configurator MUST not -->
<!-- touch the priority of root. -->
<!-- The root category always exists and cannot be subclassed. -->
<!ELEMENT root (param*, connector-ref*)>

