<settings4j:configuration xmlns:settings4j='http://settings4j.org/'>

	<connector name="SystemPropertyConnector"
		class="org.settings4j.connector.SystemPropertyConnector">
	</connector>
	
	<connector name="FSConnector" class="org.settings4j.connector.FSConnector">
		<param name="rootFolderPath" value="test/Settings4jUnittest"/>
	</connector>
	
	<settings name="com.mycompany.module2"  mapping-ref="defaultMapping2" additivity="false">
		<connector-ref ref="FSConnector" readonly="false" />
	</settings>
	
	<root mapping-ref="defaultMapping" >
		<connector-ref ref="SystemPropertyConnector" readonly="true" />
	</root>
	
	<mapping name="defaultMapping">
		<entry key="com/mycompany/moduleX/webserviceXY" ref-key="global/webserviceXY"/>
		<entry key="com/mycompany/moduleY/webserviceXY" ref-key="global/webserviceXY"/>
	</mapping>
	
	<mapping name="defaultMapping2">
		<entry key="X" ref-key="global/webserviceXY"/>
		<entry key="Y" ref-key="global/webserviceXY"/>
	</mapping>
</settings4j:configuration>